<h1>Edit {{course.title}}</h1>
<form action="/courses/edit" method="POST">
  <div class="input-field">
    <input id="title" type="text" name="title" class="validate" value={{course.title}} required>
    <label for="title">Course name</label>
    <span class="helper-text" data-error="Input name"></span>

  </div>
  <div class="input-field">
    <input id="price" type="number" name="price" class="validate" value={{course.price}} required min="1">
    <label for="price">Course price</label>
    <span class="helper-text" data-error="Input price"></span>

  </div>
  <div class="input-field">
    <input id="img" type="text" name="img" class="validate" value={{course.img}} required>
    <label for="img">URL image</label>
    <span class="helper-text" data-error="Input URL"></span>
  </div>
  {{!-- для редактирования курса необходино передать уже сформированный id --}}
  <input type="hidden" name="id" value="{{course.id}}">
  {{!-- добавляем скрытый инпут для безопасности csurf --}}
  <input type="hidden" name="_csrf" value="{{csrf}}">

  <button type="submit" class="btn btn-primary">Save course</button>
</form>
<form action="/courses/remove" method="POST">
  <input type="hidden" name="id" value="{{course.id}}">
  {{!-- добавляем скрытый инпут для безопасности csurf --}}
  <input type="hidden" name="_csrf" value="{{csrf}}">
  <button class="btn red">Delete course</button>
</form>